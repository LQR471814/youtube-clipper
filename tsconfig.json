{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/*": ["*"]
    }
  },
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "public/*",
    "src/~/proto/*"
  ]
}